<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:background="#FFFF84"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            style="@style/Images"
            app:srcCompat="@drawable/grizzly" />

        <ImageView
            android:id="@+id/imageView2"
            style="@style/Images"
            app:srcCompat="@drawable/panda" />

        <ImageView
            android:id="@+id/imageView3"
            style="@style/Images"
            app:srcCompat="@drawable/ice" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#AAFD8E"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            style="@style/Names"
            android:text="> GRIZZLY"
             />

        <TextView
            android:id="@+id/textView2"
            style="@style/Names"
            android:text="> PANDA"
             />

        <TextView
            android:id="@+id/textView"
            style="@style/Names"
            android:text="> ICE BEAR"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="#C4ABFE"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="202dp"
                android:layout_height="191dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FFAC62">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="NOTE 1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="129dp"
                        android:padding="10dp"
                        android:text="Grizzly is the oldest of the brothers. Although he is the charismatic, jovial, and a highly motivated leader, Grizzly is not the brightest bear in the bunch. " />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@android:color/darker_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/s" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:background="#C4ABFE"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="179dp"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@android:color/holo_blue_bright">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="NOTE 2" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="The youngest in the family, Ice Bear is a bear of few words. Heâ€™s a bit odd and outwardly eccentric " />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FFFF84">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        app:srcCompat="@drawable/x" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We Bare Bears"
                        android:textSize="25sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>